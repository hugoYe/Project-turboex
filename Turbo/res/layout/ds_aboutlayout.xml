<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ds_logofontcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ds_rl_aboutback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_title_height"
        android:background="@color/ds_logobackgroudcolor" >

        <ImageView
            android:id="@+id/ds_iv_aboutback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_title_marginleft"
            android:src="@drawable/ds_backicon_selector" />

        <ImageView
            android:id="@+id/ds_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_other_marginleft"
            android:src="@drawable/ds_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_other_marginleftleft"
            android:layout_toRightOf="@+id/ds_iv_logo"
            android:gravity="center"
            android:text="@string/ds_about_about"
            android:textColor="@color/ds_logofontcolor"
            android:textSize="@dimen/ds_title_fontsize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/ds_about_logo_marginbottom"
                    android:paddingTop="@dimen/ds_about_logo_margintop" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ds_aboutlogo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/ds_about_logo_margintop" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/ds_about_title"
                            android:textColor="@color/ds_about_title_color"
                            android:textSize="@dimen/ds_about_title_fontsize" />

                        <TextView
                            android:id="@+id/dsabout_id_launcher_version_cn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/ds_about_title_margintop_2"
                            android:text="@string/ds_about_version"
                            android:textColor="@color/ds_about_title_color"
                            android:textSize="@dimen/ds_about_title_fontsize_2" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ds_cutline" />

            <LinearLayout
                android:id="@+id/dsabout_button_social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds_2_title_2_height"
                    android:background="@drawable/ds_background_selector" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_2_title_2_marginleft"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ds_about_weibo"
                            android:textColor="@color/ds_font_selector"
                            android:textSize="@dimen/ds_twoline_bigfontsize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ds_about_weibo_site"
                            android:textColor="@color/ds_font_selector"
                            android:textSize="@dimen/ds_twoline_smallfontsize" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ds_2_title_2_marginrightgo"
                        android:src="@drawable/ds_goicon_selector" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ds_cutline" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsabout_button_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds_2_title_2_height"
                    android:background="@drawable/ds_background_selector" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_2_title_2_marginleft"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ds_about_qqgroup"
                            android:textColor="@color/ds_font_selector"
                            android:textSize="@dimen/ds_twoline_bigfontsize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ds_about_qqgroup_address"
                            android:textColor="@color/ds_font_selector"
                            android:textSize="@dimen/ds_twoline_smallfontsize" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ds_2_title_2_marginrightgo"
                        android:src="@drawable/ds_goicon_selector" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ds_cutline" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsabout_button_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds_2_title_2_height"
                    android:background="@drawable/ds_background_selector" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_2_title_2_marginleft" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ds_about_feedback"
                            android:textColor="@color/ds_font_selector"
                            android:textSize="@dimen/ds_twoline_bigfontsize" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ds_2_title_2_marginrightgo"
                        android:src="@drawable/ds_goicon_selector" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ds_cutline" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsabout_button_privacy_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ds_2_title_2_height"
                    android:background="@drawable/ds_background_selector" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ds_2_title_2_marginleft" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ds_about_privacy_notice"
                            android:textColor="@color/ds_font_selector"
                            android:textSize="@dimen/ds_2_title_2_fontsize" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ds_2_title_2_marginrightgo"
                        android:src="@drawable/ds_goicon_selector" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ds_cutline" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>